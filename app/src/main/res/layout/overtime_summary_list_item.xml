                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actual End Time    :  "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/actual_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>-->

            <!--<View
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@id/start_end_time_layout"
                android:background="#111111" />-->


            <TextView
                android:id="@+id/extra_hours_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Actual Duty Hours       :  "
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/actual_duty_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/extra_hours_text"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/verification_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#111111" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/extra_duty_hours_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Extra Duty Hours         :  "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/extra_duty_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/extra_duty_hours_text" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#111111" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason  :  "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reason_on_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/reason" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#111111" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/verify_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Verify"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/undo_form_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Undo"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/notify_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Notify Admin"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#111111" />

    </LinearLayout>

</RelativeLayout>