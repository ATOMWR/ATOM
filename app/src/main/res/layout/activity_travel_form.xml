<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akav.atom.travel.TravelForm">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tsp_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tsp_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="TSP Number"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tsp_number_layout"
            android:layout_marginTop="10dp"
            android:text="Start Date"
            android:textStyle="bold" />

        <Button
            android:id="@+id/select_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:elevation="0dp"
            android:text="Start"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/ta_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/select_start_date"
            android:ems="10"
            android:inputType="date"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView4"
            android:text="End Date"
            android:textStyle="bold" />

        <Button
            android:id="@+id/select_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ta_start_date"
            android:layout_alignParentEnd="true"
            android:text="End" />

        <EditText
            android:id="@+id/ta_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/select_end_date"
            android:ems="10"
            android:inputType="date"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ta_start_date"
            android:layout_marginTop="10dp"
            android:text="Start Tine"
            android:textStyle="bold" />

        <Button
            android:id="@+id/select_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:text="Start" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView6"
            android:text="End Time"
            android:textStyle="bold" />

        <Button
            android:id="@+id/select_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/select_start_time"
            android:layout_alignStart="@+id/select_end_date"
            android:text="End" />

        <EditText
            android:id="@+id/ta_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/select_start_time"
            android:ems="10"
            android:inputType="time"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ta_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/select_end_time"
            android:ems="10"
            android:inputType="time"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ta_start_time"
            android:layout_marginTop="10dp"
            android:text="Start Station"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:text="End Station"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ta_start_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ta_end_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView10"
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ta_start_station"
            android:layout_below="@+id/ta_start_station"
            android:layout_marginTop="10dp"
            android:id="@+id/textInputLayout2">

            <EditText
                android:id="@+id/ta_reason"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Reason"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:layout_toStartOf="@+id/textView7" />

    </RelativeLayout>

    <Button
        android:id="@+id/ta_submit_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@color/colorAccent"
        android:padding="16dp"
        android:text="Submit Form"
        android:textColor="#FFFFFF" />

</RelativeLayout>
