<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akav.atom.travel.TravelForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="8dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tsp_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>


        <EditText
            android:id="@+id/ta_start_date"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_above="@+id/ta_end_date"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="65dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="date"
            android:textSize="14sp" />

        <Button
            android:id="@+id/select_end_date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/ta_end_date"
            android:layout_toEndOf="@+id/ta_end_date"
            android:background="@drawable/ic_calendar" />

        <EditText
            android:id="@+id/ta_end_date"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_above="@+id/select_start_time"
            android:layout_alignStart="@+id/ta_start_date"
            android:layout_marginBottom="12dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="date"
            android:textSize="14sp" />

        <Button
            android:id="@+id/select_start_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/select_end_time"
            android:layout_marginBottom="19dp"
            android:layout_toEndOf="@+id/ta_end_date"
            android:background="@drawable/otstrttime_button" />

        <Button
            android:id="@+id/select_end_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/ta_end_time"
            android:layout_toEndOf="@+id/ta_end_time"
            android:background="@drawable/otendtime_button" />

        <EditText
            android:id="@+id/ta_start_time"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/select_start_time"
            android:layout_toStartOf="@+id/select_start_time"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="time"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ta_end_time"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_above="@+id/ta_submit_form"
            android:layout_alignStart="@+id/ta_start_time"
            android:layout_marginBottom="200dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="time"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ta_start_station"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/ta_end_time"
            android:layout_below="@+id/select_end_time"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ta_end_station"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/ta_start_station"
            android:layout_below="@+id/ta_start_station"
            android:layout_marginTop="11dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="text"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@+id/textView7"
            android:visibility="gone" />

        <EditText
            android:id="@+id/ta_reason"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/ta_end_station"
            android:layout_below="@+id/ta_end_station"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tsp_number"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_above="@+id/ta_start_date"
            android:layout_alignStart="@+id/ta_start_date"
            android:layout_marginBottom="12dp"
            android:background="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tsp_number"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/select_start_date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/ta_start_date"
            android:layout_toEndOf="@+id/ta_start_date"
            android:background="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/tsp_number"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:text="TSP Number:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ta_start_date"
            android:layout_alignStart="@+id/textView4"
            android:text="Start Date:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ta_end_date"
            android:layout_alignStart="@+id/textView6"
            android:text="End Date:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/ta_start_time"
            android:layout_alignBottom="@+id/ta_start_time"
            android:layout_alignStart="@+id/textView9"
            android:text="Start Time:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/textView10"
            android:layout_alignTop="@+id/ta_end_time"
            android:text="End Time:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ta_start_station"
            android:layout_alignStart="@+id/textView11"
            android:text="Source:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ta_end_station"
            android:layout_alignStart="@+id/textView12"
            android:text="Destination:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ta_reason"
            android:layout_alignStart="@+id/textView13"
            android:text="Reason:"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ta_submit_form"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/otsubmit_button"
            android:padding="16dp"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</RelativeLayout>
