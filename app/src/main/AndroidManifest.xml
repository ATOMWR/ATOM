<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.akav.atom">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/register_activity_title" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/home_title" />
        <activity
            android:name=".OvertimeActivity"
            android:label="Overtime Allowance" />
        <activity
            android:name=".TravelActivity"
            android:label="Travel Allowance" />
        <activity
            android:name=".OvertimeGridActivity"
            android:label="Select Date"/>
    </application>

</manifest>